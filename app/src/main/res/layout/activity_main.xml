<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="292dp"
            app:srcCompat="@drawable/tetris_logo" />

        <ImageView
            android:id="@+id/btnLvl1"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="5dp"
            app:srcCompat="@drawable/btn_lvl_1" />

        <ImageView
            android:id="@+id/btnLvl2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="5dp"
            app:srcCompat="@drawable/btn_lvl_2" />

        <ImageView
            android:id="@+id/btnLvl3"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="5dp"
            app:srcCompat="@drawable/btn_lvl_3" />

        <ImageView
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:padding="5dp"
            app:srcCompat="@drawable/btn_exit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>